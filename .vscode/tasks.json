{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 建置使用中檔案",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "偵錯工具產生的工作。"
        },
        {
            "label": "build ViewCube",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "ViewCube.c",
                "-o",
                "ViewCube",
                "-lGL",
                "-lGLU",
                "-lglut",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "version": "2.0.0"
}